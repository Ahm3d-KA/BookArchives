@model OpenLibraryBook
<form method="post" asp-controller="MyBooks" asp-action="AddPOST">
    <input name="title" type="text" placeholder="Type here" class="input input-bordered w-full max-w-xs" />
    <button type="submit" class="btn btn-active btn-secondary">Search</button>
</form>

@if (Model!= null)
{
    foreach (Document item in Model.docs)
    {
        <article class="prose">
            <p>@item.title
            @item.author_name[0]
            @item.ddc_sort
            @item.ratings_average</p>
            <p>bow hello</p>
        </article>

    }
    <img src="@Model.bookCoverUrl" alt="@Model.docs[0].title"/>
    @* // Add more properties here if needed *@
}
else
{
    <article class="prose">
        <h5>Ain't there ma boi</h5>
    </article>
}
